%div.page-header
  %h1 Dołącz do społeczności

= form_for(@user, :url => new_user_registration_path, method: :post, :html => { :role => 'form'}) do |f|

  %div.form-group
    = f.label :name, "Jak się nazywasz:"
    = f.text_field :name, autofocus: true, class: 'form-control'
    = f.error_message_on :name

  %div.form-group
    = f.label :email, "Twój adres email:"
    = f.email_field :email, class: 'form-control'
    = f.error_message_on :email

  %div.form-group
    = f.label :description, "Napisz kilka zdań o sobie:"
    = f.text_area :description, rows: 4, class: "form-control"
    = f.error_message_on :description



  -#%div.social-login
    %span.label Lub dołącz używając
    = link_to "Facebook", user_omniauth_authorize_path(:facebook), class: 'btn btn-default btn-lg btn-facebook'
    = link_to "Google", user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-default btn-lg btn-google'

  %div.form-actions
    = f.submit 'Dołącz do nas!', class: 'btn btn-primary btn-lg'

