  %nav.navbar.navbar-transparent.navbar-static-top
    .container
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Navigacja
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to 'Trampa.pl', root_path, class: 'navbar-brand'
      .collapse.navbar-collapse
